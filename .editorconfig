# This file is the top-most EditorConfig file
root=true

[*]
charset=utf-8
end_of_line=lf
insert_final_newline=true
trim_trailing_whitespace=true
max_line_length=120

[*.{ts,js,tsx,jsx}]
indent_size=2
indent_style=space

[*.{html,htm}]
indent_size=2
indent_style=space
max_line_length=300

[*.css]
indent_size=2
indent_style=space

[*.{xml,config,props,targets,nuspec,resx,ruleset,vsixmanifest,vsct,runsettings}]
indent_size=2
indent_style=space
max_line_length=1000

[*.{json,json5,*rc,watchmanconfig,code-snippets}]
indent_size=2
indent_style=space
max_line_length=1000

[*.md]
trim_trailing_whitespace=false

[*.gradle]
indent_size=4
indent_style=space
